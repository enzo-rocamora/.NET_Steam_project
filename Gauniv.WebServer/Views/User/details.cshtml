@model Gauniv.WebServer.Data.User
@using Gauniv.WebServer.Data

@{
    ViewData["Title"] = $"User Details - {Model.UserName}";
    var totalPlayTime = ViewData["TotalPlayTime"] as string;
    var mostPlayedGame = ViewData["MostPlayedGame"] as Game;
    var lastPlayTime = ViewData["LastPlayTime"] as DateTime?;
}

<div class="container py-4">
    <h1 class="mb-4">User Details</h1>

    <div class="row">
        <!-- Profile Information -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Profile Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@($"{Model.FirstName} {Model.LastName}")</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Member Since</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("d")</dd>

                        <dt class="col-sm-4">Last Login</dt>
                        <dd class="col-sm-8">
                            @if (Model.LastLoginAt != default)
                            {
                                @Model.LastLoginAt.ToString("g")
                            }
                            else
                            {
                                <span class="text-muted">Never</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Gaming Statistics -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Gaming Statistics</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Games Owned</dt>
                        <dd class="col-sm-8">@Model.OwnedGames.Count()</dd>

                        <dt class="col-sm-4">Total Play Time</dt>
                        <dd class="col-sm-8">@(totalPlayTime ?? "No play time")</dd>

                        <dt class="col-sm-4">Most Played</dt>
                        <dd class="col-sm-8">@(mostPlayedGame?.Title ?? "No games played")</dd>

                        <dt class="col-sm-4">Last Played</dt>
                        <dd class="col-sm-8">
                            @if (lastPlayTime.HasValue)
                            {
                                @lastPlayTime.Value.ToString("g")
                            }
                            else
                            {
                                <span class="text-muted">Never played</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Owned Games -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Owned Games</h5>
        </div>
        <div class="card-body">
            @if (Model.OwnedGames.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Categories</th>
                                <th>Play Time</th>
                                <th>Last Played</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var game in Model.OwnedGames)
                            {
                                var stats = Model.Statistics.FirstOrDefault(s => s.GameId == game.Id);
                                <tr>
                                    <td>@game.Title</td>
                                    <td>@string.Join(", ", game.Categories.Select(c => c.Name))</td>
                                    <td>
                                        @if (stats != null)
                                        {
                                            @stats.TotalPlayTime.ToString(@"hh\:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never played</span>
                                        }
                                    </td>
                                    <td>
                                        @if (stats?.LastPlayedAt != null)
                                        {
                                            @stats.LastPlayedAt.ToString("g")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never played</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="mb-0 text-muted">No games owned</p>
            }
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>